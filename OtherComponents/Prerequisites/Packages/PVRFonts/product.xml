<?xml version="1.0" encoding="utf-8" ?>

<Product
  xmlns="http://schemas.microsoft.com/developer/2004/01/bootstrapper"
  ProductCode="Microarea.PVRFonts"
>

	<!-- Defines list of files to be copied on build -->
	<PackageFiles>
		<PackageFile Name="PVRFonts.msi" PublicKey="" />
	</PackageFiles>
	<InstallChecks>
		<MsiProductCheck Property="PVRFonts" Product="{3ECCBF29-EA77-416E-B844-3EF562362D30}"/>
	</InstallChecks>
	
	<!-- Defines how to invoke the setup for the Visual C++ 9.0 redist -->
	<Commands Reboot ="None">
		<Command PackageFile="PVRFonts.msi" Arguments= '/quiet'>
			<!-- These checks determine whether the package is to be installed -->
			<InstallConditions>
				<!-- Block install if user does not have admin privileges -->
				<FailIf Property="AdminUser" Compare="ValueEqualTo" Value="false" String="AdminRequired"/>
				<BypassIf Property="PVRFonts" Compare="VersionGreaterThanOrEqualTo" Value="1.0.0"/>
			</InstallConditions>
		</Command>
	</Commands>
</Product>
