// Place your settings in this file to overwrite the default settings
{
    "editor.formatOnType": false,
    "editor.roundedSelection": false,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/*.cs": true,
        "**/.DS_Store": true,
        "**/*.map": {
            "when": "$(basename).map"
        },
        "**/*.js": {
            "when": "$(basename).ts"
        },
        ".vs/**": true,
        ".idea/**": true,
        "bin/**": true,
        "node_modules/**": false,
        "obj/**": true,
        "packages/**": true,
        "*.sln": true,
        "*.vssscc": true,
        "*.csproj*": true,
        "web.*.config": true
    }
}