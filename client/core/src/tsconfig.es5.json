{
    "compilerOptions": {
        "declaration": true,
        "module": "es2015",
        "target": "es2016",
        "baseUrl": ".",
        "stripInternal": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "outDir": "../build",
        "rootDir": ".",
        "lib": [
            "es2016",
            "dom"
        ],
        "skipLibCheck": true,
        "types": []
    },
    "angularCompilerOptions": {
        "annotateForClosureCompiler": true,
        "strictMetadataEmit": true,
        "skipTemplateCodegen": true,
        "flatModuleOutFile": "taskbuilder-core.js",
        "flatModuleId": "@taskbuilder/core"
    },
    "files": [
        "./index.ts"
    ]
}