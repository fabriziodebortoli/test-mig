{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "project": {
        "name": "tbweb"
    },
    "apps": [{
        "root": "src",
        "outDir": "dist",
        "assets": [
            { "glob": "**/*", "input": "../node_modules/@taskbuilder/core/dictionary/", "output": "./dictionary" },
            { "glob": "**/*", "input": "../node_modules/@taskbuilder/reporting-studio/dictionary/", "output": "./dictionary" },
            { "glob": "**/*", "input": "../node_modules/@taskbuilder/icons/fonts/", "output": "./assets/m4" },
            { "glob": "**/*", "input": "../node_modules/@taskbuilder/core/style/fonts/", "output": "./assets/fonts" },
            { "glob": "**/*", "input": "../node_modules/bwip-angular2/fonts/", "output": "./assets/bwipjs-fonts" },
            "assets",
            "dictionary",
            "favicon.ico",
            "config.json"
        ],
        "index": "index.html",
        "main": "main.ts",
        "polyfills": "polyfills.ts",
        "test": "test.ts",
        "tsconfig": "tsconfig.app.json",
        "testTsconfig": "tsconfig.spec.json",
        "prefix": "tb",
        "styles": [
            "styles.scss"
        ],
        "scripts": [
            "../node_modules/hammerjs/hammer.min.js"
        ],
        "environmentSource": "environments/environment.ts",
        "environments": {
            "dev": "environments/environment.ts",
            "prod": "environments/environment.prod.ts",
            "desktop": "environments/environment.desktop.ts",
            "test": "environments/environment.test.ts"
        }
    }],

    "e2e": {
        "protractor": {
            "config": "./protractor.conf.js"
        }
    },

    "lint": [{
            "project": "src/tsconfig.app.json",
            "exclude": "**/node_modules/**"
        },
        {
            "project": "src/tsconfig.spec.json",
            "exclude": "**/node_modules/**"
        },
        {
            "project": "e2e/tsconfig.e2e.json",
            "exclude": "**/node_modules/**"
        }
    ],
    "test": {
        "karma": {
            "config": "./karma.conf.js"
        }
    },
    "defaults": {
        "styleExt": "scss",
        "prefixInterfaces": false,
        "inline": {
            "style": false,
            "template": false
        },
        "spec": {
            "class": false,
            "component": false,
            "directive": false,
            "module": false,
            "pipe": false,
            "service": false
        },
        "build": {
            "preserveSymlinks": true
        }
    }
}