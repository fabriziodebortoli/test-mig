{
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "lib": ["es6", "dom"],
        "mapRoot": "./",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "../dist/out-tsc",
        "sourceMap": true,
        "target": "es5",
        "noImplicitAny": false,
        "typeRoots": [
            "../node_modules/@types"
        ],
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": ["app/shared/*"],
            "@core/*": ["app/core/*"],
            "@app/*": ["app/*"]
        }
    }
}