<?xml version="1.0" encoding="utf-8"?>
<SetupDefinition xmlns="http://schemas.microarea.it/setup"
                 configuration="debug"
                 upgradeGuid="8F38AA22-B06F-401F-8FE2-C08E57D5AB08"
                 producer="Microarea S.p.A."
                 productName="Microarea TaskBuilder.Net"
                 setupOutputFileName="TaskBuilderStudio"
                 >
	<!--Consideriamo questo path come root di partenza: C:\Development\-->
	<FileSystemStructure virtualPath="[INSTANCENAME]">
		<IncludeFolder name="Apps" virtualPath="[FOLDERNAME]">
			<IncludeFolder name="TBApps">
				<!-- includo le dll sia di debug che di release -->
				<IncludeFolder name="debug|release" >
					<IncludeFolder name="*" recursive="yes">
						<IncludeFile name="*.*" />
					</IncludeFolder>
          <!-- TBApplicationWrapper.xml serve al TBStudio Developer Edition -->
					<IncludeFile name="*.*|Tb*.pdb|Tb*.lib|TBApplicationWrapper.xml" />
					<!-- provo ad escludere i Tb*.pdb| (ora sono inclusi) -->
					<ExcludeFile name="TbManagedGate.*|Microarea.Extensions.*|Microarea*.pdb|*.exp|*.dep|*.ilk|*.lib" />
				</IncludeFolder>
			</IncludeFolder>
			<IncludeFolder name="TbAppManager">
				<IncludeFolder name="release|debug" >
					<IncludeFolder name="*" recursive="yes">
						<IncludeFile name="*.*" />
					</IncludeFolder>
					<IncludeFile name="*.*" />
					<ExcludeFile name="*.exp|*.dep|*.ilk|*.lib|*.pdb" />
				</IncludeFolder>
			</IncludeFolder>
			<IncludeFolder name="Prerequisites|AdministrationConsole|MagicDocumentsWord|MagicDocumentsExcel">
				<IncludeFolder name="release" >
					<IncludeFolder name="*" recursive="yes">
						<IncludeFile name="*.*" />
					</IncludeFolder>
					<IncludeFile name="*.*" />
					<ExcludeFile name="*.pdb|*.exp|*.dep|*.ilk|*.lib|Microarea.Console.Plugin.TestPlanAdmin.dll" />
				</IncludeFolder>
				<IncludeFolder name="Engine" recursive="yes">
					<IncludeFile name="*.*" />
				</IncludeFolder>
				<IncludeFolder name="Packages" recursive="yes">
					<IncludeFile name="*.*" />
				</IncludeFolder>
			</IncludeFolder>
			<IncludeFolder name="ClickOnceDeployer">
				<IncludeFolder name="*-*" recursive="yes">
					<IncludeFile name="*" />
				</IncludeFolder>
				<IncludeFile name="*.exe|*.dll|*.config"/>
			</IncludeFolder>
		</IncludeFolder>

		<IncludeFolder name="Standard" share="[INSTANCENAME]_Standard">
      <IncludeFolder name="Applications">
        <IncludeFolder name="TBF" featureName="TaskBuilder Framwwork" mandatory="yes">
          <IncludeFolder name="*" fragment="yes" recursive="yes">
            <IncludeFile name="*.config|*.png|*.Solution.xml|*.Brand.xml|*.csm|*.menu" />
          </IncludeFolder>
          <IncludeFile name="application.config" />
        </IncludeFolder>
        <IncludeFolder name="TBS">
          <IncludeFolder name="*" recursive="yes">
            <IncludeFile name="*.config|*.png|*.Solution.xml|*.Brand.xml|*.csm|*.menu" />
          </IncludeFolder>
          <IncludeFile name="application.config" />
        </IncludeFolder>
      </IncludeFolder>

			<IncludeFolder name="TaskBuilder">

        <IncludeFolder name=".vs" recursive="yes">
          <IncludeFile name=".suo" />
        </IncludeFolder>
				<IncludeFolder name="Extensions">
					<IncludeFolder name="*">
						<!--questa suddivisione mi serve per copiare le sole risorse grafiche che servono-->
						<IncludeFolder name="Menu" recursive="yes">
							<IncludeFile name ="*.menu|*.gif|*.bmp"/>
						</IncludeFolder>
            <IncludeFolder name="Files" recursive="yes">
              <IncludeFile name ="*"/>
              <ExcludeFile name="*.txt" />
            </IncludeFolder>
						<IncludeFolder name="Dictionary">
							<IncludeFolder name="*" featureName="[FOLDERNAME]">
								<IncludeFile name="*.bin" />
							</IncludeFolder>
						</IncludeFolder>
						<IncludeFolder name="*" recursive="yes">
							<IncludeFile name ="*.xsl|*.xml|*.config|*.sql|*.bin|*.wrm|*.ini|*.dex|*.h|*.hrc|*.hjson|*.tbjson"/>
						</IncludeFolder>
						<!--avendo tolto il recursive al nodo padre devo re-includere le estensioni anche a questo livello-->
						<IncludeFile name ="*.xsl|*.xml|*.config|*.sql|*.bin|*.ini|*.wrm|MultiChartCtl.h|MultiChartId.h|Tfxdatatip.h|*.dex|*.h|*.hrc|*.hjson"/>
					</IncludeFolder>
					<ExcludeFolder name="TbCustomizer|TbRowSecurity"/>
					<IncludeFile name="*.config" />
				</IncludeFolder>

				<IncludeFolder name="Framework">
					<IncludeFolder name="*">
            <IncludeFolder name="RCToJSON|TbJson">
              <IncludeFile name="*.exe|*.dll" />
            </IncludeFolder>
						<!--questa suddivisione mi serve per copiare le sole risorse grafiche che servono-->
						<IncludeFolder name="Menu" recursive="yes">
							<IncludeFile name="*.menu|*.gif|*.bmp"/>
						</IncludeFolder>
            <IncludeFolder name="Files" recursive="yes">
              <IncludeFile name="*"/>
              <ExcludeFile name="*.txt" />
            </IncludeFolder>
						<IncludeFolder name="Dictionary">
							<IncludeFolder name="*" featureName="[FOLDERNAME]">
								<IncludeFile name="*.bin" />
							</IncludeFolder>
						</IncludeFolder>
						<IncludeFolder name="*" recursive="yes">
							<IncludeFile name ="*.xsl|*.xml|*.config|*.sql|*.bin|*.wrm|*.ini|*.dex|*.h|*.hrc|*.hjson|*.tbjson"/>
						</IncludeFolder>
            <ExcludeFolder name="smCrypter" />
						<!--avendo tolto il recursive al nodo padre devo re-includere le estensioni anche a questo livello-->
						<IncludeFile name ="*.xsl|*.xml|*.config|*.sql|*.bin|*.ini|*.dex|*.h|*.hrc|*.hjson"/>
					</IncludeFolder>
          <IncludeFolder name="Themes" recursive="yes">
            <IncludeFile name="*.theme" />
          </IncludeFolder>
          <ExcludeFolder name="documentations" />
					<IncludeFile name="*.config" />
					<ExcludeFile name="DevelopmentEnvironment.xml" />
				</IncludeFolder>

				<IncludeFolder name="OtherComponents">
					<IncludeFolder name="OcDev">
						<IncludeFolder name="bclw">
							<IncludeFile name="BCLW.H"/>
						</IncludeFolder>
            <IncludeFolder name="BCGCBPro" recursive="yes">
              <IncludeFile name="*.h"/>
            </IncludeFolder>
					</IncludeFolder>
					<IncludeFolder name="OcLib">
						<IncludeFile name="*.lib"/>
					</IncludeFolder>
          <IncludeFolder name="OcBin">
            <IncludeFolder name="bin" recursive="yes">
              <IncludeFile name="*.dll" />
            </IncludeFolder>
          </IncludeFolder>
				</IncludeFolder>

				<IncludeFolder name="Config">
					<IncludeFile name="*.xml"/>
				</IncludeFolder>

				<IncludeFolder name="AdministrationConsole">
					<IncludeFolder name="*" fragment="yes">
						<IncludeFolder name="Dictionary">
							<IncludeFolder name="*" featureName="[FOLDERNAME]">
								<IncludeFile name="*.bin" />
							</IncludeFolder>
						</IncludeFolder>
						<IncludeFolder name="*" recursive="yes">
							<IncludeFile name ="*.xml|*.config|*.sql"/>
						</IncludeFolder>
						<IncludeFile name ="*.config"/>
					</IncludeFolder>
          <ExcludeFolder name="HermesAdmin|RowSecurityToolKit" />
					<IncludeFile name="*.config" />
				</IncludeFolder>

        <IncludeFolder name="Themes" recursive="yes">
          <IncludeFile name ="*"/>
        </IncludeFolder>

				<IncludeFolder name="WebFramework">
          <IncludeFolder name="M4Client|M4Server" fragment="yes" recursive="yes">
            <IncludeFile name="*" />
          </IncludeFolder>
          <IncludeFolder name="*" virtualPath="[FOLDERNAME]" fragment="yes">
						<IncludeFolder name="Bin" recursive="yes">
							<IncludeFile name ="*.dll"/>
						</IncludeFolder>
						<IncludeFolder name="Dictionary" recursive="yes">
							<IncludeFile name ="*"/>
						</IncludeFolder>
						<IncludeFolder name="Files" recursive="yes">
							<IncludeFile name="*" />
						</IncludeFolder>
						<IncludeFile name="*.asmx|*.asax|*.aspx|*.ascx|*.config|*.css" />
					</IncludeFolder>
					<ExcludeFolder name="TBTalkieManager|EasyLookSetup|TBLoaderLauncher|RESTGate|TbHermes" />
					<IncludeFile name="*.config" />
				</IncludeFolder>

			</IncludeFolder>

		</IncludeFolder>

		<IncludeFolder name="Custom" share="[INSTANCENAME]_Custom" />
	</FileSystemStructure>
</SetupDefinition>