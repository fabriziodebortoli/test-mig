<?xml version="1.0" encoding="utf-8"?>
<SetupDefinition xmlns="http://schemas.microarea.it/setup"
                 configuration="release"
                 upgradeGuid="025582DF-E273-43E3-98A4-22B3B2FDFD8E"
                 producer="Microarea S.p.A."
                 productName="Microarea Sage Connector"
                 setupOutputFileName="MicroareaSageConnector"
                 applicationType="addon"
                 clickOnceClientDeployment="yes"
                 producerWebSite="http://www.microarea.it"
                 >
	<!--Consideriamo questo path come root di partenza: C:\Development\-->
	<FileSystemStructure >
		<IncludeFolder name ="Apps" >
			<IncludeFolder name="publish">
				<IncludeFile name="*SageConnector*.dll"/>
			</IncludeFolder>
		</IncludeFolder>
		<IncludeFolder name="Standard">
			<IncludeFolder name="Applications">
				<IncludeFolder name="SageConnector">
					<IncludeFolder name="*" fragment="yes">
						<IncludeFolder name="Modules" recursive="yes">
							<IncludeFile name="*.csm"/>
						</IncludeFolder>
            <IncludeFolder name="DatabaseScript" recursive="yes">
              <IncludeFile name="*.sql|*.xml"/>
            </IncludeFolder>
            <IncludeFolder name="Files" recursive="yes">
              <IncludeFile name="*.bmp"/>
            </IncludeFolder>
            <IncludeFolder name="Report" recursive="yes">
              <IncludeFile name="*.wrm"/>
            </IncludeFolder>
            <IncludeFolder name="ModuleObjects">
              <IncludeFile name="*.xml"/>
            </IncludeFolder>
            <IncludeFolder name="DataManager" recursive="yes">
              <IncludeFile name="*.*"/>
            </IncludeFolder>
						<IncludeFolder name="Menu|Settings">
							<IncludeFile name="*.menu|*.config|*.gif"/>
						</IncludeFolder>
            <IncludeFolder name="ModuleObjects">
              <IncludeFile name="*.xml"/>
            </IncludeFolder>
            <IncludeFolder name="Report">
              <IncludeFile name="*.wrm"/>
            </IncludeFolder>
            <IncludeFile name="*.config|*.Solution.xml|*.Brand.xml"/>
						<ExcludeFile name="*.CompatibilityList.config"/>
					</IncludeFolder>
					<IncludeFile name="application.config" />
				</IncludeFolder>
			</IncludeFolder>
		</IncludeFolder>
	</FileSystemStructure>
</SetupDefinition>
