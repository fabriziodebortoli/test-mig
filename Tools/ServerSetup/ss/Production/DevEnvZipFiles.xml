  <FileSystemStructure>
    <!-- Copio gli exe di TBS -->
    <IncludeFolder name="TaskBuilderStudioMSI" recursive="yes">
      <IncludeFile name="*.exe"/>
    </IncludeFolder>
	<!-- Copio msi di InternationalStudio -->
    <IncludeFolder name="InternationalStudio" recursive="yes">
      <IncludeFile name="*.msi"/>
    </IncludeFolder>
    <!-- Copio gli zip dei sorgenti di TB e di MagoNet -->
    <IncludeFile name="*.zip"/>
  </FileSystemStructure>
</SetupDefinition>
