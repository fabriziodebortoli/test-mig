<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="TBMobileUI.DocumentListView"
xmlns:tbui ="clr-namespace:TBMobileUI;assembly=TBMobileUI" Style="{StaticResource PageStyle}">
	<ContentPage.Content>
		<Grid x:Name="container" Padding="2,5,2,0">
			<Grid.Children>
				<Grid x:Name="UpToolbar" VerticalOptions="Start">
					<Grid.Children>
						<Button x:Name="Back" Text="&lt;&lt; Back" Style="{StaticResource ButtonStyle}" HorizontalOptions="Start" VerticalOptions="Start" Clicked="OnBackClicked"></Button>
						<Button x:Name="New" Text="+" Style="{StaticResource ButtonStyle}" HorizontalOptions="End" VerticalOptions="Start" Clicked="OnNewClicked"></Button>
					</Grid.Children>
				</Grid>
				<StackLayout VerticalOptions="CenterAndExpand">
					<StackLayout.Children>
						<Label Style="{StaticResource LabelStyle}" Text="List of documents" FontSize="Large" HorizontalOptions="CenterAndExpand"></Label>
						<tbui:UIBodyEdit x:Name="body"></tbui:UIBodyEdit>
					</StackLayout.Children>
				</StackLayout>
			</Grid.Children>
		</Grid>
	</ContentPage.Content>
</ContentPage>
