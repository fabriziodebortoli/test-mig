<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="TBMobileUI.UIBodyEdit"  
			 xmlns:tbui ="clr-namespace:TBMobileUI;assembly=TBMobileUI">
	<ContentView.Content>
		<Frame Style="{StaticResource FrameStyle}">
			<StackLayout Padding="5, 5, 0, 5" Orientation="Vertical" Spacing="15" Style="{StaticResource BodyEditStackLayoutStyle}">
				<StackLayout.Children>
					<StackLayout Padding="5, 5, 0, 5" Orientation="Horizontal" Spacing="15" x:Name ="header">
					</StackLayout>
					<tbui:UIBodyEditContent x:Name="bodyContent"></tbui:UIBodyEditContent>
					<Button x:Name="AddRow" Text="Add Row" Style="{StaticResource ButtonStyle}" VerticalOptions="End"></Button>
				</StackLayout.Children>
			</StackLayout>
		</Frame>
	</ContentView.Content>
</ContentView>
